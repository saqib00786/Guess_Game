<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gamebg"
    tools:context=".game.FragmentGame">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ur_word_str_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/centeralViewID"
        android:layout_centerInParent="true"
        android:text="@string/UrWordIs"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/centeralViewID"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/word_score_bg"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/word_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/UrWord"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/word_score_bg"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/currentScoreID_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/currentScore"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/timeCounterID_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/skipBtnID_game"
        android:layout_marginTop="24dp"
        android:layout_toStartOf="@id/nextBtnID_game"
        android:layout_toEndOf="@id/skipBtnID_game"
        android:gravity="center"
        android:text="@string/timeCounter"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextBtnID_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="@drawable/btn_bg"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        tools:ignore="RelativeOverlap" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/skipBtnID_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="@drawable/btn2_bg"
        android:text="@string/skip"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />
</RelativeLayout>